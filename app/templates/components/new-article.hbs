{{yield}}
<div class="container">
  <form class="saveArticle">
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="image">Image(url)</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="story">Story Text</label>
      {{textarea value=story id="story"}}
    </div>

    <div class="form-group">
      <label for="tags">Tags</label>
      {{input value=tags id="tags"}}
    </div>

    <button {{action 'saveArticle'}}>Save!</button>
  </form>
</div>
